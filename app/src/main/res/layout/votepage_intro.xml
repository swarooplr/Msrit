<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.swaroop.msrit_am.voting.Votepage_intro_page"
    android:background="@color/backgroung">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="111dp"
        android:id="@+id/editText"
        android:textSize="20sp"
        android:hint="Enter group name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@color/colorhint"
        android:backgroundTint="@color/cardview_light_background"/>


     <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:text="CLICK HERE TO SUBMIT BEFORE ENTERING GROUP"
        android:id="@+id/submit"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/cardview_light_background"
        android:textColor="@color/colorAccent"
        android:textColorLink="?attr/colorPrimary"
         android:visibility="gone"/>

    <Button
        android:text="ADD new group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/register"
        android:background="@drawable/borders"
        android:textColor="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/cardview_light_background"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:textSize="20sp"
        android:hint="Enter password"
        android:textColorHint="@color/colorhint"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/cardview_light_background"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter group"
        android:id="@+id/enter"
        android:backgroundTint="@color/cardview_light_background"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/person_name"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="25sp"
        android:hint="Name error, please try again"
        android:textColorLink="?attr/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

</RelativeLayout>
